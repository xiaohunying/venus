{
    "extends": [
        "standard",
        "standard-jsx"
    ],
    "env": {
        "browser": true,
        "jasmine": true
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": "off",
        "no-path-concat": "off",
        "jsx-quotes": "off",
        "prefer-const": [
            "error",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ]
    }
}
